<br>
<h1>Confirm User Information</h1>
<div class="row">
  <div class="col-md-4">

    <h3>Are you sure these values are correct?</h3>
  </div>
</div>
<br>
<hr />
<div class="row">
  <div class="col-md-12">
    <h4>Email: <%= @user.email %></h4>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h4>Name: <%= @user.name %></h4>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-md-12">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "welcome", action: "index"}, class: 'btn btn-danger', method: :get %>
  </div>
</div>
